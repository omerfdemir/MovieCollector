<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omerfdemir.moviecollector">
    <uses-sdk android:minSdkVersion="21"
        android:targetSdkVersion="21"
        android:maxSdkVersion="24" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Categories"
            android:label="@string/app_name"
            android:parentActivityName=".Categories"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".SingleMovie"
            android:label="@string/app_name"
            android:parentActivityName=".SingleMovie"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Movies"
            android:label="@string/app_name"
            android:parentActivityName=".Movies"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Toplist"
            android:label="@string/app_name"
            android:parentActivityName=".Toplist"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LatestMovies"
            android:label="@string/app_name"
            android:parentActivityName=".LatestMovies"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Years"
            android:label="@string/app_name"
            android:parentActivityName=".Years"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Directors"
            android:label="@string/app_name"
            android:parentActivityName=".Directors"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MyMoviesList"
            android:label="@string/app_name"
            android:parentActivityName=".MyMoviesList"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MyMovies"
            android:label="@string/app_name"
            android:parentActivityName=".MyMovies"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Contact"
            android:label="@string/app_name"
            android:parentActivityName=".MyMovies"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AboutUs"
            android:label="@string/app_name"
            android:parentActivityName=".MyMovies"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/app_name"
            android:parentActivityName=".MyMovies"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>